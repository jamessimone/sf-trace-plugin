{
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "ts-node": {
    "esm": true
  }
}
